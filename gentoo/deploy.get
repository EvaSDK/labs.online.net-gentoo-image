#!/bin/sh

scp init.d/* root@${1}:/etc/init.d/
ssh root@${1} "chmod 755 /etc/init.d/*"

scp sets/* root@${1}:/etc/portage/sets/
scp patches/* root@${1}:/tmp/

ssh root@${1} eselect locale set en_US.utf8
ssh root@${1} eselect pager set /usr/bin/less
ssh root@${1} eselect python set python2.7

